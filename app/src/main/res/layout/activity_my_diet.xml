<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyDiet">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="My Diet"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.brkckr.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBarCalories"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cpbBackgroundColor="@color/design_default_color_primary"
        app:cpbBackgroundWidth="@dimen/background_width"
        app:cpbProgressColor="@color/colorAccent"
        app:cpbProgressValue="0"
        app:cpbProgressWidth="@dimen/progress_width"
        app:cpbState="clockwise"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <!--<com.ramijemli.percentagechartview.PercentageChartView
        android:id="@+id/view_id"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:pcv_mode="ring"
        app:pcv_progressColor="@color/design_default_color_primary"
        app:pcv_orientation="clockwise"
        app:pcv_animDuration="800"
        app:pcv_animInterpolator="anticipate_overshoot"
        app:pcv_progress="10"
        app:pcv_startAngle="270"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>-->

    <LinearLayout
        android:id="@+id/ll_steps"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <TextView
            android:id="@+id/tv_total_calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="28"
            android:textColor="@color/colorPrimary"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Calories"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="55dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/circularProgressBarCalories">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_breakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/plain_bg"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:elevation="8dp"
                android:padding="10dp"
                android:text="Breakfast"
                android:textColor="@color/design_default_color_primary"
                android:textSize="24dp" />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/el_breakfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                app:el_expanded="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_breakfast">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:id="@+id/tv_snack1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plain_bg"
                        android:drawableRight="@drawable/ic_expand_more_black_24dp"
                        android:elevation="6dp"
                        android:padding="10dp"
                        android:text="Snack 1"
                        android:textColor="@color/design_default_color_primary"
                        android:textSize="20dp" />

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/el_snack1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        app:el_expanded="false">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_snack1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>

                    </net.cachapa.expandablelayout.ExpandableLayout>

                    <TextView
                        android:id="@+id/tv_snack2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plain_bg"
                        android:drawableRight="@drawable/ic_expand_more_black_24dp"
                        android:elevation="6dp"
                        android:padding="10dp"
                        android:text="Snack 2"
                        android:textColor="@color/design_default_color_primary"
                        android:textSize="20dp" />

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/el_snack2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        app:el_expanded="false">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_snack2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>

                    </net.cachapa.expandablelayout.ExpandableLayout>

                </LinearLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>

            <TextView
                android:id="@+id/tv_lunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/plain_bg"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:elevation="8dp"
                android:padding="10dp"
                android:text="Lunch"
                android:textColor="@color/design_default_color_primary"
                android:textSize="24dp" />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/el_lunch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                app:el_expanded="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_breakfast">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:id="@+id/tv_snack3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plain_bg"
                        android:drawableRight="@drawable/ic_expand_more_black_24dp"
                        android:elevation="6dp"
                        android:padding="10dp"
                        android:text="Snack 3"
                        android:textColor="@color/design_default_color_primary"
                        android:textSize="20dp" />

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/el_snack3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        app:el_expanded="false">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_snack3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>

                    </net.cachapa.expandablelayout.ExpandableLayout>

                    <TextView
                        android:id="@+id/tv_snack4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/plain_bg"
                        android:drawableRight="@drawable/ic_expand_more_black_24dp"
                        android:elevation="6dp"
                        android:padding="10dp"
                        android:text="Snack 4"
                        android:textColor="@color/design_default_color_primary"
                        android:textSize="20dp" />

                    <net.cachapa.expandablelayout.ExpandableLayout
                        android:id="@+id/el_snack4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        app:el_expanded="false">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_snack4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </android.support.v7.widget.RecyclerView>

                    </net.cachapa.expandablelayout.ExpandableLayout>

                </LinearLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>

            <TextView
                android:id="@+id/tv_dinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/plain_bg"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:elevation="8dp"
                android:padding="10dp"
                android:text="Dinner"
                android:textColor="@color/design_default_color_primary"
                android:textSize="24dp" />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/el_dinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:el_expanded="false">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_dinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </net.cachapa.expandablelayout.ExpandableLayout>

            <TextView
                android:id="@+id/tv_extras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/plain_bg"
                android:drawableRight="@drawable/ic_expand_more_black_24dp"
                android:elevation="8dp"
                android:padding="10dp"
                android:text="Extras"
                android:textColor="@color/design_default_color_primary"
                android:textSize="24dp" />

            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/el_extras"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:el_expanded="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_extras"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>

                    <RelativeLayout
                        android:id="@+id/fb_admore"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="right|bottom"
                        android:background="@drawable/fb_circule">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:tint="@android:color/black"
                            app:srcCompat="@android:drawable/ic_input_add" />

                    </RelativeLayout>

                </LinearLayout>

            </net.cachapa.expandablelayout.ExpandableLayout>

            <!--<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="Total: "
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_total_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />

            </RelativeLayout>-->

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>